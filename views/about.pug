extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ← Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9
        
        h1  #{Name}

        p.lead.text-light #{Title}

        .portfolio-bio
          each bio in Bios
            | #{bio}
            br

      .cell.portfolio-meta.small-6.medium-2.large-3

        h6 Skills

        ul
          each skill in Skills
            li= skill 

        h6 Contact Info

        ul
          li= Phone
          li= Email
       
        a.button.expanded(href='https://linkedin.com/in/ayrtomvr' target='_blank') LinkedIn
        a.button.expanded(href='https://github.com/TommyAyrton' target='_blank') GitHub
        a.button.expanded(href='https://twitter.com/ayrtomvr' target='_blank') Twitter
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ← Back
  